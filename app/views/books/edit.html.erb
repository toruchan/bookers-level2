<div class="container">
<h1>Editing Book</h1>

<%= form_for(@book, url: book_path, method: :put) do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
  <div class="col-sm-12">
    <div class="form-group has-icon">
      <label >Title</label>
      <%= f.text_field :title, class:"form-control", placeholder:"title" %>
      <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <label >body</label>
    <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"body" %>
  </div>
</div>
<hr>
<%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
<% end %>

</div>
</form>

<a class="Show" href=<%= book_path(@book.id) %>>Show</a>
<a class="Back" href="/books">Back</a>

</div>
