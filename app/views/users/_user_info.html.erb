<div class="col-xs-3">
  <h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<table>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<div class="row">
  <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href=<%= edit_user_path(current_user.id) %>></a>
</div>

<h2>New book</h2>
    
<%= form_for(@book, url: books_path) do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
  <div class="col-sm-12">
    <div class="form-group has-icon">
      <label class="control-label sr-only">Title</label>
      <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
      <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"コメント" %>
  </div>
</div>
<hr>
<%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
<% end %>

</div>
</form>
